@page
@model AuthorsBookCatalogue.Pages.Books.AddAuthorToBookModel

<h1>Add Author to Book</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SelectedBookId" class="control-label">Select a Book:</label>
                <select asp-for="SelectedBookId" asp-items="@(new SelectList(Model.Books, "BookId", "Title"))" class="form-control">
                    <option value="">-- Select a Book --</option>
                </select>
                <span asp-validation-for="SelectedBookId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectedAuthorId" class="control-label">Select an Author:</label>
                <select asp-for="SelectedAuthorId" asp-items="@(new SelectList(Model.Authors, "AuthorId", "Name"))" class="form-control">
                    <option value="">-- Select an Author --</option>
                </select>
                <span asp-validation-for="SelectedAuthorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Author to Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>