@page
@model AuthorsBookCatalogue.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Book.Title) | by @foreach (var author in Model.Book.Authors){ @Html.DisplayFor(modelItem => author.Name)   }</h2>

<div class="bookGrid">
    <h4 id="bookHeader" style="background-color:lightgray">Book</h4>
    <div id="bookImage">
        <img src="@Model.Book.ImageUrl" alt="Book Image" width="200" />
    </div>
    <div id="bookInfo">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.DateCreated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Publisher)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Publisher)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.BookType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.BookType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Language)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Language)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Dimensions)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Dimensions)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Rating)/5
            </dd>
        </dl>
    </div> 
    <div id="bookAuthors" >
        <h4 style="background-color:lightgray" width="100%">Author(s)</h4>
        <table>
            @foreach (var author in Model.Book.Authors)
            {
                <tr>
                    <td><img src="@author.ImageUrl" width="100"/></td>
                    <td>@Html.DisplayFor(modelItem => author.Name) <br /> <a asp-page="../Authors/Details" asp-route-id="@author.AuthorId">View Details</a></td>
                </tr>
            }
        </table>

    </div>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book?.BookId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
